<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="joke"
            type="com.atimi.jokeapp.model.Joke" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/card_radius"
        android:layout_margin="@dimen/cardview_margin"
        app:cardElevation="@dimen/cardview_elevation">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_margin="@dimen/cardview_margin"
                android:id="@+id/text_joke"
                android:text="@{joke.joke}"
                android:textAppearance="?attr/textAppearanceListItem"
                tools:text="Joke 123"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/button_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

                 <ImageButton
                     android:id="@+id/button_share"
                     android:layout_width="@dimen/touchable"
                     android:layout_height="@dimen/touchable"
                     android:background="@android:color/transparent"
                     app:layout_constraintEnd_toStartOf="@+id/button_remove"
                     app:layout_constraintTop_toTopOf="parent"
                     app:layout_constraintBottom_toTopOf="@+id/text_created"
                     android:src="@drawable/outline_ios_share_24" />

            <ImageButton
                android:id="@id/button_remove"
                android:background="@android:color/transparent"
                android:layout_width="@dimen/touchable"
                android:layout_height="@dimen/touchable"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/text_created"
                android:src="@drawable/outline_highlight_off_24" />

            <TextView
                android:id="@id/text_created"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@id/text_joke"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="wrap_content"
                android:text="@{joke.created.toString()}"
                android:textAppearance="?attr/textAppearanceListItemSmall"
                android:textSize="10sp"
                android:gravity="right"
                tools:text="Created 123" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>